@model Core.Domain.PageGroup

@{
    ViewData["Title"] = "گروه جدید";
    
}

<h1>Create</h1>

<h4>PageGroup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupTitle" class="control-label">گروه جدید:</label>
                <input asp-for="GroupTitle" class="form-control" />
