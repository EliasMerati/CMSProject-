@model IEnumerable<Core.Domain.PageGroup>

@{
    ViewData["Title"] = "صفحه ادمین";
   
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">افزودن گروه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning btn-sm" asp-route-id="@item.GroupId">ویرایش</a> |
                <a asp-action="Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.GroupId">جزییات</a> |
                <a asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-id="@item.GroupId">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
